    <%- layout('layouts/boilerplate') %>
   <div class="row mt-3 ">
    <div class="col-8 offset-2 ">
   <br>
    <h3 class="heading offset-2"><b><%= listing.title %></b></h3>
    <br>
    <div class="card col-6 offset-2 show-card " >
  <img src="<%=listing.image.url%>" class="card-img-top show-img" alt="listing-image" >
    <div class="card-body" >
    <h5 class="card-title"></h5>
    <p class="card-text">
       &#8377; <%= (typeof listing.price === "number" ? listing.price.toLocaleString("en-IN") : "N/A") %>/night;
        <br>
        <i class="fa-solid fa-location-dot"></i> <%= listing.location %>, <%= listing.country %>
    </p>
  </div>
</div >
    <br />
    <h4>Description:</h4>
    <p><%= listing.description %></p>
    <br />
   

   <div class="d-flex gap-3 justify-content-center align-items-center my-3">
     <a href="/listings/<%= listing._id %>/edit" class="btn btn-edit">Edit</a>
     <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE" style="margin: 0;">
       <button class="btn btn-delete">Delete</button>
     </form>
   </div>
   <hr>
   
   <div class="listing-card col-8 offset-1 ">
    <h4>Leave a Review</h4>
    <form action="/listings/<%= listing._id %>/reviews" method="POST" novalidate class="needs-validation">
      <div class="mb-3 mt-3">
         <label for="rating" class ="form-label">Rating:</label>
      <input type="range" min="1" max="5" step="1" id="rating" name="review[rating]" value="3" >
      </div>
      <div class="mb-3 mt-3">
         <label for="comment" class="form-label">Comment:</label>
         <textarea id="comment" name="review[comment]" rows="4" cols="50" class="form-control" required></textarea>
         <div class="invalid-feedback">
            Please provide a comment for the review.
      </div>
      <div>
         <button type="submit" class="btn btn-primary mt-2">Submit Review</button>
      </div>
     
    </form>
    <hr>
    <h4>Reviews</h4>
    <div class=" row">
    
      
    
      <% for(review of listing.reviews) { %>
        <div class=" card mb-3 col-6  mt-3">
          <div class="card-body">
            <h5 class="card-title">John Doe</h5>
              <p class="card-text">
                <p class="card-text"><%= review.comment %></p>
                <p class="card-text"> <%= review.rating %>stars</p>
                
              </div>
              <form class=" btn btn-sm btn-delete mb-2" method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" style="margin: 0;">
                <button class="btn btn-sm btn-delete">Delete Review</button>
              </form>
        </div>  
         
       
    <% } %>
</div>
    
    </div>
  </div>
  
  